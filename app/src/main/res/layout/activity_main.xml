<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <ImageView
            android:layout_marginTop="56dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cover"
            android:scaleType="fitXY"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_margin="8dp"
        android:background="#D1C4E9"
        android:id="@+id/beaches"
        android:gravity="center"
        android:padding="12dp"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Beaches"
        android:textColor="#212121"/>
    <TextView
        android:layout_margin="8dp"
        android:id="@+id/caves"
        android:textSize="18sp"
        android:background="#D1C4E9"
        android:gravity="center"
        android:padding="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#212121"
        android:text="Caves"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#212121"
            android:layout_margin="8dp"
            android:id="@+id/dams"
            android:gravity="center"
            android:padding="12dp"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dams"
            android:background="#D1C4E9" />
        <TextView
            android:background="#D1C4E9"

            android:textColor="#212121"
            android:layout_margin="8dp"
            android:id="@+id/forts"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Forts"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:background="#D1C4E9"

            android:textColor="#212121"
            android:layout_margin="8dp"
            android:id="@+id/islands"
            android:gravity="center"
            android:padding="12dp"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Islands" />
        <TextView
            android:background="#D1C4E9"

            android:textColor="#212121"
            android:layout_margin="8dp"
            android:id="@+id/parks"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="National Parks"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:background="#D1C4E9"
            android:layout_margin="8dp"
            android:textColor="#212121"
            android:id="@+id/temples"
            android:gravity="center"
            android:padding="12dp"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Temples" />
        <TextView
            android:background="#D1C4E9"
            android:layout_margin="8dp"
            android:textColor="#212121"
            android:id="@+id/waterfalls"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Waterfalls"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:background="#D1C4E9"
            android:layout_margin="8dp"
            android:textColor="#212121"
            android:id="@+id/others"
            android:gravity="center"
            android:padding="12dp"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Others" />
        <TextView
            android:background="#D1C4E9"
            android:layout_margin="8dp"
            android:textColor="#212121"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""/>
    </LinearLayout>

</LinearLayout>
</FrameLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:itemTextColor="@color/color_gray"
        app:itemIconTint="@color/colorPrimary"
        app:menu="@menu/drawer_view"
        app:headerLayout="@layout/nav_header"/>

    </android.support.v4.widget.DrawerLayout>
